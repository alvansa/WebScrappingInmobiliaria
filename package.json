{
  "name": "app-remates",
  "version": "1.0.0",
  "description": "Aplicacion para la busqueda y entrega de resumen de remates",
  "main": "componentes/Electron/main.js",
  "scripts": {
    "start": "electron .",
    "start:test": "electron . --test",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "make": "electron-builder",
    "makeWindows": "electron-builder --win --x64",
    "postinstall": "electron-rebuild",
    "dev": "electron . --dev",
    "empty": "electron . --empty",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:functional": "jest tests/Funcional"
  },
  "author": "Alvaro Soto",
  "license": "ISC",
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@types/electron": "^1.4.38",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "better-sqlite3": "^11.10.0",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "node-fetch": "^3.3.2",
    "pdf-parse": "^1.1.1",
    "pdf2json": "^3.1.4",
    "puppeteer-core": "^24.4.0",
    "puppeteer-in-electron": "^3.0.5",
    "webpack": "^5.96.1",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.AFInmobiliaria.InfoRemates",
    "productName": "InfoRemates",
    "directories": {
      "output": "out"
    },
    "target": "NSIS",
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "componentes/Electron/icon.icns"
    }
  }
}
